import React from 'react';
import {View, Text} from 'react-native';
import {SafeAreaView, SafeAreaProvider} from 'react-native-safe-area-context';

const ViewBoxesWithColorAndText = () => {
  return (
    <SafeAreaProvider>
      <SafeAreaView style={{height: 10000, flexDirection: 'row'}}>
        <View style={{backgroundColor: 'blue', flex: 0.33}} />
        <View style={{backgroundColor: 'red', flex: 0.33}} />
        <Text style={{flex:0.33,fontSize:50}}>Hello World!</Text>
        
      </SafeAreaView>
    </SafeAreaProvider>
  );
};

export default ViewBoxesWithColorAndText;
